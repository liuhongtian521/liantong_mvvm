<?xml version="1.0" encoding="utf-8"?>
<com.zdy.study.fcWidgets.FCConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fcll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_8"
    android:focusableInTouchMode="true"
    app:scale="1.05"
    android:orientation="vertical">

    <com.meetsl.scardview.SCardView
        android:id="@+id/scv_bg_menu_sel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/dp_7"
        app:cardElevation="@dimen/dp_7"
        app:cardShadowStartColor="@color/dash_red"
        app:cardShadowEndColor="@color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardLightDirection="LT"/>  <!--光源位置在左侧，则阴影出现在反方向右侧 -->


    <androidx.cardview.widget.CardView
        android:id="@+id/img_item_card"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_160"
        android:layout_marginRight="@dimen/dp_9"
        android:layout_marginBottom="@dimen/dp_9"
        app:cardCornerRadius="@dimen/dp_7"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <ImageView
            android:id="@+id/iv_broadcast_video"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:gravity="center_vertical"
            android:text="新闻联播"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            android:layout_margin="@dimen/dp_10"
            android:layout_gravity="bottom"/>

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical"
            android:text="新闻联播"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12"
            android:layout_margin="@dimen/dp_10"
            android:layout_gravity="bottom|end"/>
    </androidx.cardview.widget.CardView>








