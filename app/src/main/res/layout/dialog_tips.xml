<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_336"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/shape_4_gray_line"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/tv_tips1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="是否确认立即结算?"
        android:textSize="@dimen/sp_14"
        android:textColor="#1E1E1E"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/dp_40" />
    
    <TextView
        android:id="@+id/tv_tips2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥"
        android:textSize="@dimen/sp_20"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/tv_tips1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/dp_30" />
    
    <TextView
        android:id="@+id/tv_cannel"
        android:layout_width="@dimen/dp_168"
        android:layout_height="@dimen/dp_42"
        android:text="取消"
        android:textColor="@drawable/text_tab_selector"
        android:background="@drawable/ic_tab_selector_bg"
        android:gravity="center"
        android:focusableInTouchMode="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@+id/tv_tips2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/dp_40"/>

    <TextView
        android:id="@+id/tv_confirm"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_42"
        android:text="确认"
        android:textColor="@drawable/text_tab_selector"
        android:background="@drawable/ic_tab_selector_bg"
        android:gravity="center"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:layout_constraintTop_toBottomOf="@+id/tv_tips2"
        app:layout_constraintStart_toEndOf="@+id/tv_cannel"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/dp_40"/>
</androidx.constraintlayout.widget.ConstraintLayout>