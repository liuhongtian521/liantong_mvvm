                                android:layout_height="28dp"
                                android:focusableInTouchMode="true"
                                android:gravity="center_vertical"
                                app:scale="1.02">

                                <View
                                    android:id="@+id/view_red1"
                                    android:layout_width="2dp"
                                    android:layout_height="10dp"
                                    android:layout_centerVertical="true"
                                    android:background="@color/dash_red" />

                                <TextView
                                    android:id="@+id/iv_broadcast_speed_name_right1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="20dp"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="10dp"
                                    android:layout_toRightOf="@+id/view_red1"
                                    android:gravity="center"
                                    android:text="新闻联播"
                                    android:textColor="@color/app_black3"
                                    android:textSize="12sp" />
                            </com.zdy.study.fcWidgets.FCRelativeLayout>
                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
