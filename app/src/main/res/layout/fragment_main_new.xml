                            android:layout_height="33dp"
                            android:layout_marginLeft="9dp"
                            android:background="@mipmap/ic_course_example" />

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="15dp"
                            android:layout_marginLeft="19dp"
