                            android:layout_height="20dp"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="9dp"
                            android:layout_marginTop="10dp"
                            android:layout_toRightOf="@+id/iv_broadcast_speed"
                            android:textSize="12sp" />


