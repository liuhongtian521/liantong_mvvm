<?xml version="1.0" encoding="utf-8"?>
<com.zdy.study.fcWidgets.FCConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusableInTouchMode="false"
    android:focusable="false"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.zdy.study.fcWidgets.FCConstraintLayout
        android:id="@+id/fcc_fdyd"
        android:layout_width="870dp"
        android:layout_height="@dimen/dp_80"
        app:scale="1.02"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:background="@drawable/shape_4dp_white"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginRight="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_marginBottom="@dimen/dp_4"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:paddingTop="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_8"
        app:layout_constraintEnd_toStartOf="@+id/iv_delete">


        <TextView
            android:id="@+id/tv_content_fdyd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sdfsdf"
            android:textColor="#1E1E1E"
            android:textSize="@dimen/sp_14"
            android:maxLines="2"
            android:ellipsize="end"/>

        <ImageView
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_18"
            android:src="@mipmap/ic_lbsd_fd"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/dp_6"/>

        <TextView
            android:id="@+id/tv_fd_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:textColor="#95989E"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="@dimen/dp_49"
            android:layout_marginBottom="@dimen/dp_6"/>
    </com.zdy.study.fcWidgets.FCConstraintLayout>

    <com.zdy.study.fcWidgets.FCImageView
        android:id="@+id/iv_delete"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@mipmap/item_delete"
        android:visibility="gone"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</com.zdy.study.fcWidgets.FCConstraintLayout>