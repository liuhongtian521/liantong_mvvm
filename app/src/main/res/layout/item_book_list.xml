<?xml version="1.0" encoding="utf-8"?>
<com.zdy.study.fcWidgets.FCConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fcll"
    android:layout_marginTop="@dimen/dp_2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_12"
    android:layout_marginRight="@dimen/dp_12"
    android:background="@color/white"
    android:focusableInTouchMode="true"
    android:orientation="horizontal"
    android:padding="10dp"
    android:layout_margin="@dimen/dp_10"
    app:scale="1.02"
    app:shadowColor="@color/bg_999999"
    app:shadowRadius="5"
    app:shadowRound="@dimen/dp_4">


    <ImageView
        android:id="@+id/iv_book_name"
        android:layout_width="63dp"
        android:layout_height="92dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintRight_toLeftOf="@+id/cl_right"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_right"
        android:layout_width="0dp"
        android:layout_height="92dp"
        android:paddingRight="@dimen/dp_5"
        android:paddingStart="@dimen/dp_5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/iv_book_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_book_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/app_black3"
            android:textSize="12sp"
            android:layout_marginLeft="5dp"
            android:paddingRight="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_content_book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="7dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:textColor="@color/text_908f94"
            android:textSize="10sp"
            android:layout_marginLeft="5dp"
         android:paddingRight="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_book_name" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.zdy.study.fcWidgets.FCConstraintLayout>