<?xml version="1.0" encoding="utf-8"?>
<com.zdy.study.fcWidgets.FCLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fcll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_12"
    android:background="@color/white"
    android:focusableInTouchMode="true"
    android:orientation="horizontal"
    android:paddingTop="5dp"
    android:paddingBottom="@dimen/dp_5">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_book_name"
            android:layout_width="55dp"
            android:layout_height="82dp"
            android:layout_marginLeft="15dp" />

        <TextView
            android:id="@+id/tv_book_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_toRightOf="@+id/iv_book_name"
            android:textColor="@color/app_black3"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_book_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="22dp"
            android:layout_toRightOf="@+id/tv_book_name"
            android:textColor="@color/text_908f94"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_content_book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_book_author"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="7dp"
            android:layout_marginRight="22dp"
            android:layout_toRightOf="@+id/iv_book_name"
            android:ellipsize="end"
            android:maxLines="3"
            android:textColor="@color/text_908f94"
            android:textSize="10sp" />

    </RelativeLayout>
</com.zdy.study.fcWidgets.FCLinearLayout>