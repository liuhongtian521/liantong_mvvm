<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/include_layout"
            layout="@layout/title_style_white" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/dp_15">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="头像"
                android:textSize="@dimen/sp_14"
                android:textColor="#1E1E1E"
                android:layout_marginTop="@dimen/dp_36"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>
            
            <ImageView
                android:id="@+id/iv_info_header"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/dp_11"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="姓名"
                android:textSize="@dimen/sp_14"
                android:textColor="#1E1E1E"
                android:layout_marginTop="@dimen/dp_37"
                app:layout_constraintTop_toBottomOf="@+id/iv_info_header"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:id="@+id/tv_info_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#767882"
                android:textSize="@dimen/sp_14"
                android:layout_marginTop="@dimen/dp_37"
                app:layout_constraintTop_toBottomOf="@+id/iv_info_header"
                app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="单位职位"
                android:textSize="@dimen/sp_14"
                android:textColor="#1E1E1E"
                android:layout_marginTop="@dimen/dp_37"
                app:layout_constraintTop_toBottomOf="@+id/tv_info_name"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:id="@+id/tv_info_zhiwu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#767882"
                android:textSize="@dimen/sp_14"
                android:layout_marginTop="@dimen/dp_37"
                app:layout_constraintTop_toBottomOf="@+id/tv_info_name"
                app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="班级"
                android:textSize="@dimen/sp_14"
                android:textColor="#1E1E1E"
                android:layout_marginTop="@dimen/dp_37"
                app:layout_constraintTop_toBottomOf="@+id/tv_info_zhiwu"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:id="@+id/tv_info_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#767882"
                android:textSize="@dimen/sp_14"
                android:layout_marginTop="@dimen/dp_37"
                app:layout_constraintTop_toBottomOf="@+id/tv_info_zhiwu"
                app:layout_constraintRight_toRightOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</layout>