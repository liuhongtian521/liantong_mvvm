<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <ImageView
        android:id="@+id/iv_empty"
        android:layout_width="@dimen/dp_370"
        android:layout_height="@dimen/dp_211"
        android:src="@mipmap/empty_data"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tv_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="暂无数据"
        android:textColor="#767882"
        android:textSize="@dimen/sp_14"
        app:layout_constraintTop_toBottomOf="@+id/iv_empty"
        app:layout_constraintLeft_toLeftOf="@+id/iv_empty"
        app:layout_constraintRight_toRightOf="@+id/iv_empty"/>

    <com.zdy.study.fcWidgets.FCButton
        android:id="@+id/fcb_next_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="下一页"
        android:textColor="@drawable/text_tab_selector"
        android:focusableInTouchMode="true"
        android:background="@drawable/ic_tab_selector_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_12"/>

    <com.zdy.study.fcWidgets.FCButton
        android:id="@+id/fcb_previous_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="上一页"
        android:visibility="gone"
        android:textColor="@drawable/text_tab_selector"
        android:focusableInTouchMode="true"
        android:background="@drawable/ic_tab_selector_bg"
        app:layout_constraintBottom_toTopOf="@+id/fcb_next_page"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_12"/>

</androidx.constraintlayout.widget.ConstraintLayout>