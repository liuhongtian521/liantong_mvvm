<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <declare-styleable name="TvRecyclerView">
        <attr name="android:orientation" tools:ignore="ResourceName"/>
        <attr name="tv_layoutManager" format="string"/>
        <attr name="tv_numColumns" format="integer"/>
        <attr name="tv_numRows" format="integer"/>

        <attr name="tv_selectedItemCentered" format="boolean" />
        <attr name="tv_loadMoreBeforehandCount" format="integer" />
        <attr name="tv_selectedItemOffsetStart" format="dimension" />
        <attr name="tv_selectedItemOffsetEnd" format="dimension" />

    </declare-styleable>

    <attr name="scale" format="float"/>
    <!--圆角度-->
    <attr name="shadowRound" format="dimension" />
    <!--阴影的高度-->
    <attr name="shadowLeftHeight" format="dimension" />
    <attr name="shadowTopHeight" format="dimension" />
    <attr name="shadowRightHeight" format="dimension" />
    <attr name="shadowBottomHeight" format="dimension" />
    <!--上方阴影的偏离度-->
    <attr name="shadowOffsetY" format="dimension" />
    <attr name="shadowOffsetX" format="dimension" />
    <!--阴影颜色-->
    <attr name="shadowCardColor" format="color" />
    <attr name="shadowColor" format="color" />
    <!--阴影颜色模糊度，越大越模糊-->
    <attr name="shadowRadius" format="integer" />

    <declare-styleable name="FCButton">
        <attr name="scale"/>
    </declare-styleable>

    <declare-styleable name="FCImageView" >
        <attr name="scale"/>
    </declare-styleable>

    <declare-styleable name="FCLinearLayout">
        <attr name="scale"/>
    </declare-styleable>

    <declare-styleable name="FCRelativeLayout">
        <attr name="scale"/>
    </declare-styleable>

    <declare-styleable name="FCTextview">
        <attr name="scale"/>
    </declare-styleable>
    <declare-styleable name="FCConstraintLayout">
        <!--大小变化程度-->
        <attr name="scale" />
        <!--圆角度-->
        <attr name="shadowRound"  />
        <!--阴影的高度-->
        <attr name="shadowLeftHeight"  />
        <attr name="shadowTopHeight"  />
        <attr name="shadowRightHeight"  />
        <attr name="shadowBottomHeight"  />
        <!--上方阴影的偏离度-->
        <attr name="shadowOffsetY"  />
        <attr name="shadowOffsetX"  />
        <!--阴影颜色-->
        <attr name="shadowCardColor"  />
        <attr name="shadowColor"  />
        <!--阴影颜色模糊度，越大越模糊-->
        <attr name="shadowRadius"  />
    </declare-styleable>


</resources>