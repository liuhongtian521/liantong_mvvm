<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/white_10dp_bg">

    <RelativeLayout
        android:id="@+id/re_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="14dp"
            android:gravity="center"
            android:text="下列人脸过于相似,请手动选择"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/ll_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_title"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible">

            <RelativeLayout
                android:id="@+id/re_heard_one"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_208"
                android:layout_gravity="center"
                android:layout_marginRight="16dp"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/dp_10"
                android:padding="2dp">


                <TextView
                    android:id="@+id/txt_name_one"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/txt_dialog_nc"
                    android:gravity="center"
                    android:textSize="@dimen/sp_16" />

                <ImageView
                    android:id="@+id/img_heard_one"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/txt_name_one"
                    android:scaleType="fitXY"
                    android:src="@drawable/photo_main" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/re_heard_two"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_208"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/dp_10"
                android:padding="2dp">


                <TextView
                    android:id="@+id/txt_name_two"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/txt_dialog_nc"
                    android:gravity="center"
                    android:textSize="@dimen/sp_16" />

                <ImageView
                    android:id="@+id/img_heard_two"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/txt_name_two"
                    android:scaleType="fitXY"
                    android:src="@drawable/photo_main" />
            </RelativeLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_title"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_10"
            android:visibility="gone">


            <RelativeLayout
                android:id="@+id/re_heard_three"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_180"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_4"
                android:layout_marginRight="@dimen/dp_4"
                android:layout_weight="1"
                android:padding="2dp">


                <TextView
                    android:id="@+id/txt_name_three"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/txt_dialog_nc"
                    android:gravity="center"
                    android:textSize="@dimen/sp_16" />

                <ImageView
                    android:id="@+id/img_heard_three"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/txt_name_three"
                    android:scaleType="fitXY"
                    android:src="@drawable/photo_main" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/re_heard_four"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_180"
                android:layout_marginLeft="@dimen/dp_4"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dp_4"
                android:layout_weight="1"
                android:padding="2dp">

                <TextView
                    android:id="@+id/txt_name_four"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_34"
                    android:layout_alignParentBottom="true"
                    android:background="@color/txt_dialog_nc"
                    android:gravity="center"
                    android:textSize="@dimen/sp_16" />

                <ImageView
                    android:id="@+id/img_heard_four"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/txt_name_four"
                    android:scaleType="fitXY"
                    android:src="@drawable/photo_main" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/re_heard_five"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_180"
                android:layout_marginLeft="@dimen/dp_4"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dp_4"
                android:layout_weight="1"
                android:padding="2dp">

                <TextView
                    android:id="@+id/txt_name_five"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_34"
                    android:layout_alignParentBottom="true"
                    android:background="@color/txt_dialog_nc"
                    android:gravity="center"
                    android:textSize="@dimen/sp_16" />

                <ImageView
                    android:id="@+id/img_heard_five"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/txt_name_five"
                    android:scaleType="fitXY"
                    android:src="@drawable/photo_main" />

            </RelativeLayout>

        </LinearLayout>


    </RelativeLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/re_show"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_8"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_ok"
            android:layout_width="@dimen/dp_73"
            android:layout_height="@dimen/dp_30"
            android:layout_marginRight="18dp"
            android:background="@drawable/orange_30cornner"
            android:gravity="center"
            android:text="确认"
            android:textColor="#404373"
            android:textSize="16dp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/btn_not"
            android:layout_width="@dimen/dp_73"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="18dp"
            android:background="@drawable/line_20"
            android:gravity="center"
            android:text="取消"
            android:textColor="#b6b9d2"
            android:textSize="16dp"
            android:visibility="visible" />
    </LinearLayout>

</RelativeLayout>
